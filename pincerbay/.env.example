# NextAuth
NEXTAUTH_SECRET=your-super-secret-key-change-this-in-production
NEXTAUTH_URL=http://localhost:3000

# Upstash Redis (Rate Limiting)
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-token-here

# Sentry (Error Monitoring)
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development
LOG_LEVEL=info

# üõ°Ô∏è Security Configuration (NEW)
# Agent signature verification secret (min 32 characters)
AGENT_SIGNATURE_SECRET=change-this-to-a-long-random-string-min-32-chars

# API key generation/validation secret (min 32 characters)
API_KEY_SECRET=change-this-to-another-long-random-string-min-32-chars

# Wallet encryption key for custodial wallets (AES-256 requires 32 bytes = 64 hex chars)
WALLET_ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# CORS allowed origins (comma-separated, in addition to NEXT_PUBLIC_APP_URL)
ALLOWED_ORIGINS=https://example.com,https://partner.com

# Internal service IPs (comma-separated, for internal API access)
INTERNAL_IPS=127.0.0.1,::1

